<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:context=".ui.fragments.ActorFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/llTrendingMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:foreground="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                app:tint="@color/text_primary" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imgCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_alignParentStart="true"
                app:cardCornerRadius="@dimen/_6sdp">

                <ImageView
                    android:id="@+id/imgMovie"
                    android:layout_width="@dimen/_94sdp"
                    android:layout_height="@dimen/_138sdp"
                    android:background="@drawable/poster_bg"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/backgrounds/scenic" />


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toEndOf="@id/imgCard"
                android:fontFamily="@font/bold"
                android:text="Srdjan Djuric"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/_30sdp" />

            <TextView
                android:id="@+id/tvBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@id/imgCard"
                android:fontFamily="@font/bold"
                android:text="2003-08-01"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:id="@+id/tvPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvBirthday"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@id/imgCard"
                android:fontFamily="@font/bold"
                android:text="BiH, Tuzla"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/_20sdp" />





        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:fontFamily="@font/bold"
            android:maxLines="2"
            android:text="Biography"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_16sdp" />


        <TextView
            android:id="@+id/tvBiography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/myfont"
            android:textStyle="bold"
            android:maxLines="100"
            android:justificationMode="inter_word"
            android:text="Srdjan Djuric Srdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan DjuricSrdjan Djuric"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_13sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_8sdp"
                android:ellipsize="end"
                android:fontFamily="@font/bold"
                android:maxLines="2"
                android:text="Also known from"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/_16sdp" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/knowFromRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="10"
            tools:listitem="@layout/actor_know_from_movie_item"
            tools:visibility="visible" />




    </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>